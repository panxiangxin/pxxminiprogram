/* pages/post/post.wxss */
@import "../../lib/wxParse/wxParse.wxss";
.container {
  background-color: #f8f8f8;
  padding-left: 15rpx;
  padding-right: 15rpx;
  min-height: 100%;
  align-items: stretch;
  overflow-x: hidden;
  position: relative;
  width: 100%;
}
.loading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.loading .img {
  width: 90rpx;
  height: 90rpx;
}

.loading .text {
  margin-top: 20rpx;
  width: 100%;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
.post-title {
  /* width: 100%; */
  background-color: #fff;
}
.post-title .title {
  font-size: 60rpx;
  text-align: left;
}
 .info {
  background-color: #fff;
}
.info-image {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
}
.info-name {
  font-size: 45rpx;
    font-style: italic;
    color: gray;
}
.info-time {
  font-size: 30rpx;
    font-style: italic;
    color: gray;
}
.post-desc {
  height: 400rpx;
  padding-top: 15rpx;
  background-color: #fff;
}
.post-tag {
  padding-top: 10rpx;
  background-color: #fff;
}
.comments-wrap {
  /* width: 100%; */
  background-color: #fff;
  margin-bottom: 100rpx;
  padding: 0 0 20rpx 0;
}
.comments-wrap .title {
  padding: 40rpx 30rpx;
  font-size: 32rpx;
  text-align: left;
}