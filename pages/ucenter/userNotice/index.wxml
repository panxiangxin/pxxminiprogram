<!--pages/ucenter/userNotice/index.wxml-->
<wxs src='../../../utils/tool.wxs' module='tool'/>
<view class="container">
    <view class="catalog">
        <scroll-view class="cate" scroll-y="true">
            <block wx:if="{{loading == 1}}">
                <view class='list-wrap clearfix'>
                   <view wx:for="{{notice}}" wx:key="id">
                   <navigator wx:if="{{item.type == 1}}" hover-class='none' url="/pages/books/books?id={{item.outerid}}" data-status="{{item.status}}" data-id="{{item.outerid}}" bindtap="read">
                          <view class="post-preview">
                                  <view class="post-content">
                                    <view>
                                        <text class="{{item.status == 0? 'unread': ''}}">{{item.notifierName}}</text>
                                    </view>
                                    <text class="post-info">在{{item.outerTitle}}</text>
                                    <text class="post-info">{{item.typeName}}</text>
                                    <text class="post-info"> ·回复时间:{{tool.dateFormat(item.gmtCreate)}} </text>
                                  </view>
                                </view>
                         </navigator>
                         <navigator wx:if="{{item.type == 2}}" hover-class='none' url="/pages/books/books?id={{item.outerid}}" data-status="{{item.status}}" data-id="{{item.outerid}}" bindtap="read">
                          <view class="post-preview">
                                  <view class="post-content">
                                    <view>
                                        <text class="{{item.status == 0? 'unread': ''}}">{{item.notifierName}}</text>
                                    </view>
                                    <text class="post-info">在{{item.outerTitle}}</text>
                                    <text class="post-info">{{item.typeName}}</text>
                                    <text class="post-info"> ·回复时间:{{tool.dateFormat(item.gmtCreate)}} </text>
                                  </view>
                                </view>
                         </navigator>
                        <navigator wx:if="{{item.type == 3}}" hover-class='none' url="/pages/post/post?id={{item.outerid}}" data-status="{{item.status}}" data-id="{{item.outerid}}" bindtap="read">
                          <view class="post-preview">
                                  <view class="post-content">
                                    <view>
                                        <text class="{{item.status == 0? 'unread': ''}}">{{item.notifierName}}</text>
                                    </view>
                                    <text class="post-info">在 {{item.outerTitle}} </text>
                                    <text class="post-info">{{item.typeName}}</text>
                                    <text class="post-info"> ·回复时间:{{tool.dateFormat(item.gmtCreate)}} </text>
                                  </view>
                                </view>
                         </navigator>
                          <navigator wx:if="{{item.type == 4}}" hover-class='none' url="/pages/post/post?id={{item.outerid}}" data-status="{{item.status}}" data-id="{{item.outerid}}" bindtap="read">
                          <view class="post-preview">
                                  <view class="post-content">
                                    <view>
                                        <text class="{{item.status == 0? 'unread': ''}}">{{item.notifierName}}</text>
                                    </view>
                                    <text class="post-info">在{{item.outerTitle}}</text>
                                    <text class="post-info">{{item.typeName}}</text>
                                    <text class="post-info"> ·回复时间:{{tool.dateFormat(item.gmtCreate)}} </text>
                                  </view>
                                </view>
                         </navigator>
                   </view>
                </view>
            </block>
            <block wx:else>
                <view class="loading-wrap">
                    <image class="img" src="/images/icon/loading.gif"></image>
                    <view class="text">正在加载...</view>
                </view>
            </block>
        </scroll-view>
    </view>
</view>


